<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_White" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/richplay" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/text_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shuru"
            android:hint="@string/account"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/text_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_account"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shuru"
            android:hint="@string/password"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/text_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pwd"
            android:background="@drawable/shuru"
            android:hint="@string/nick_name"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_nick_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/login"
            android:gravity="center"
            android:text="@string/btn_register"
            android:textColor="@color/Color_White" />
    </RelativeLayout>

</FrameLayout>