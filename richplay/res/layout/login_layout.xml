<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_White"
    android:gravity="center_horizontal" >

    <!-- <WebView -->
    <!-- android:id="@+id/webview" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" /> -->

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/richplay" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/text_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shuru"
            android:hint="@string/account"
            android:paddingLeft="2dp"
            android:textColorHint="@color/light_gray" />

        <EditText
            android:id="@+id/text_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_account"
            android:background="@drawable/shuru"
            android:hint="@string/password"
            android:paddingLeft="2dp"
            android:textColorHint="@color/light_gray" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pwd"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login"
            android:clickable="true"
            android:gravity="center"
            android:onClick="btnLogin"
            android:text="@string/login"
            android:textColor="@color/Color_White" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center" >

            <com.facebook.widget.LoginButton
                android:id="@+id/btn_login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                facebook:confirm_logout="false"
                android:text="222"
                facebook:fetch_user_info="true" />

            <TextView
                android:id="@+id/btn_login_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner2bg"
                android:clickable="true"
                android:gravity="center"
                android:text="twitter" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/register"
        android:clickable="true"
        android:onClick="btnRegisterLis"
        android:padding="8dp"
        android:text="@string/register"
        android:textColor="@color/light_gray" />

</FrameLayout>