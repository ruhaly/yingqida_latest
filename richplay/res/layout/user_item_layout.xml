<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/Color_White">

    <com.yingqida.richplay.widget.RoundAngleImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好" 
            android:textColor="@color/Color_Black" />

        <TextView
            android:id="@+id/text_fy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name"
            android:layout_marginRight="4dp"
            android:text="@string/fayan"
            android:textColor="@color/color_pcenter_font" />

        <TextView
            android:id="@+id/text_bgz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_fy"
            android:layout_toRightOf="@+id/text_fy"
            android:text="@string/guanzhu2"
            android:textColor="@color/color_pcenter_font" />
    </RelativeLayout>

</LinearLayout>