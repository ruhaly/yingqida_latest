<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_White"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yingqida.richplay.widget.RoundAngleImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_fayan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/green_btn"
                android:padding="3dp"
                android:text="@string/follow"
                android:textColor="@color/Color_White" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title" >

        <TextView
            android:id="@+id/text_fy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fayan_g"
            android:clickable="true"
            android:gravity="center"
            android:onClick="textClick"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="@string/fayan"
            android:textColor="@color/color_pcenter_font" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/splid" />

        <TextView
            android:id="@+id/text_wgz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fayan_p"
            android:clickable="true"
            android:gravity="center"
            android:onClick="textClick"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="@string/woguanzhu"
            android:textColor="@color/color_pcenter_font" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/splid" />

        <TextView
            android:id="@+id/text_gzw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fayan_p"
            android:clickable="true"
            android:gravity="center"
            android:onClick="textClick"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="@string/guanzhuwo"
            android:textColor="@color/color_pcenter_font" />
    </LinearLayout>

    <com.yingqida.richplay.widget.MyViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/mi_white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>